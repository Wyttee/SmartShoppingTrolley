<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout tools:context="com.inducesmile.androidpayexample.PayPalCheckoutActivity"  android:gravity="center" android:orientation="vertical" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/cash_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:padding="@dimen/_12sdp"
        android:text="Pay Cash"
        android:textColor="@color/icons"
        android:textSize="@dimen/_16sdp" /><TextView android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <Button
        android:id="@+id/pay_pal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:padding="@dimen/_12sdp"
        android:text="@string/pay_with_paypal"
        android:textColor="@color/icons"
        android:textSize="@dimen/_16sdp" /><TextView android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <Button
        android:id="@+id/btnccv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:padding="@dimen/_12sdp"
        android:text="pay with card"
        android:textColor="@color/icons"
        android:textSize="@dimen/_16sdp" /></LinearLayout>